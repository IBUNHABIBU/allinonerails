<!-- app/views/admin/projects/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Manage Projects</h1>
    <%= link_to "New Project", new_admin_project_path, class: "btn-primary" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= project.title %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs rounded-full <%= project.published? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= project.published? ? 'Published' : 'Draft' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap space-x-2">
              <%= link_to "Edit", edit_admin_project_path(project), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to "Delete", admin_project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>