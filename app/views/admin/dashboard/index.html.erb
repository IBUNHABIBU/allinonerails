<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Projects Card -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Projects</h2>
        <%= link_to "Manage", admin_projects_path, class: "btn-primary" %>
      </div>
      <ul class="space-y-2">
        <% @projects.each do |project| %>
          <li class="flex items-center justify-between p-2 hover:bg-gray-50">
            <span><%= project.title %></span>
            <span class="text-sm <%= project.published? ? 'text-green-500' : 'text-gray-500' %>">
              <%= project.published? ? 'Published' : 'Draft' %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Services Card -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Services</h2>
        <%= link_to "Manage", admin_services_path, class: "btn-primary" %>
      </div>
      <ul class="space-y-2">
        <% @services.each do |service| %>
          <li class="flex items-center justify-between p-2 hover:bg-gray-50">
            <span><%= service.title %></span>
            <span class="text-sm <%= service.published? ? 'text-green-500' : 'text-gray-500' %>">
              <%= service.published? ? 'Published' : 'Draft' %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- About Page Card -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">About Page</h2>
      <%= link_to "Edit Content", edit_admin_about_page_path, class: "btn-secondary" %>
    </div>

    <!-- Contact Info Card -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Contact Information</h2>
      <%= link_to "Edit Details", edit_admin_contact_info_path, class: "btn-secondary" %>
    </div>
  </div>
</div>