<!-- app/views/about/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <section class="text-center mb-16">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Our Story</h1>
    <div class="max-w-3xl mx-auto">
      <p class="text-xl text-gray-600 dark:text-gray-300 italic mb-8">
        "Great things in business are never done by one person. They're done by a team of people."
        <span class="block mt-2 text-gray-500">- Steve Jobs</span>
      </p>
    </div>
  </section>

  <!-- Who We Are -->
  <section class="mb-20">
    <div class="flex flex-col md:flex-row items-center gap-8">
      <div class="md:w-1/2">
        <%= image_tag "team.png", alt: "Our team working together", class: "rounded-lg shadow-xl w-full h-auto" %>
      </div>
      <div class="md:w-1/2">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Who We Are</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          We are a passionate group of innovators, creators, and problem-solvers dedicated to delivering exceptional value to our clients.
        </p>
        <p class="text-gray-600 dark:text-gray-300">
          Founded in 2015, we've grown from a small startup to a trusted partner for businesses worldwide, thanks to our commitment to excellence and customer satisfaction.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="grid md:grid-cols-2 gap-8 mb-20">
    <div class="bg-primary-50 dark:bg-dark-700 p-8 rounded-lg">
      <div class="text-primary-500 dark:text-primary-400 mb-4">
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Mission</h3>
      <p class="text-gray-600 dark:text-gray-300">
        To empower businesses through innovative solutions that drive growth, efficiency, and sustainable success in an ever-evolving digital landscape.
      </p>
    </div>

    <div class="bg-secondary-50 dark:bg-dark-700 p-8 rounded-lg">
      <div class="text-secondary-500 dark:text-secondary-400 mb-4">
        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Vision</h3>
      <p class="text-gray-600 dark:text-gray-300">
        To be the most trusted partner for digital transformation, recognized globally for our integrity, innovation, and exceptional results.
      </p>
    </div>
  </section>

  <!-- Core Values -->
  <section class="mb-20">
    <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">Our Core Values</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <% [
        { title: "Integrity", icon: "shield-check", description: "We do what's right, not what's easy" },
        { title: "Innovation", icon: "light-bulb", description: "We embrace change and creative thinking" },
        { title: "Excellence", icon: "star", description: "We pursue mastery in everything we do" },
        { title: "Collaboration", icon: "users", description: "We achieve more together" },
        { title: "Accountability", icon: "finger-print", description: "We own our results" },
        { title: "Empathy", icon: "heart", description: "We understand before we act" }
      ].each do |value| %>
        <div class="bg-white dark:bg-dark-600 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <div class="text-primary-500 dark:text-primary-400 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M<%= case value[:icon]
                when 'shield-check' then '9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
                when 'light-bulb' then '9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
                when 'star' then '11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z'
                when 'users' then '12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'
                when 'finger-print' then '12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4'
                when 'heart' then '4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z'
                end %>"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2"><%= value[:title] %></h3>
          <p class="text-gray-600 dark:text-gray-300"><%= value[:description] %></p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Meet Our Team -->
  <section>
    <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">Meet Our Team</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <% [
        { name: "Alex Johnson", role: "CEO & Founder", image: "team/alex.jpg" },
        { name: "Maria Garcia", role: "CTO", image: "team/maria.jpg" },
        { name: "James Wilson", role: "Lead Developer", image: "team/james.jpg" },
        { name: "Sarah Chen", role: "Marketing Director", image: "team/sarah.jpg" }
      ].each do |member| %>
        <div class="text-center">
          <div class="w-32 h-32 mx-auto mb-4 overflow-hidden rounded-full shadow-md">
            <%= image_tag member[:image], alt: member[:name], class: "w-full h-full object-cover" %>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white"><%= member[:name] %></h3>
          <p class="text-primary-500 dark:text-primary-400"><%= member[:role] %></p>
          <div class="flex justify-center space-x-4 mt-3">
            <a href="#" class="text-gray-500 hover:text-primary-500 dark:hover:text-primary-400">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
              </svg>
            </a>
            <a href="#" class="text-gray-500 hover:text-primary-500 dark:hover:text-primary-400">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2 16h-2v-6h2v6zm-1-6.891c-.607 0-1.1-.496-1.1-1.109 0-.612.492-1.109 1.1-1.109s1.1.497 1.1 1.109c0 .613-.493 1.109-1.1 1.109zm8 6.891h-1.998v-2.861c0-1.881-2.002-1.722-2.002 0v2.861h-2v-6h2v1.093c.872-1.616 4-1.736 4 1.548v3.359z"/>
              </svg>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>