<nav 
  class="bg-white/80 dark:bg-dark-600/80 backdrop-blur-md md:border-b md:border-gray-200 dark:border-gray-700 fixed w-full z-50"
  data-controller="navbar"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 ">
      <!-- Logo (unchanged) -->
      <%= link_to root_path, class: "flex items-center" do %>
        <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-primary-500 to-secondary-500 flex items-center justify-center">
          <span class="text-white font-bold text-xs">LOGO</span>
        </div>
        <span class="ml-3 text-dark-600 dark:text-light font-semibold text-lg">Company</span>
      <% end %>

      <!-- Desktop Menu (unchanged) -->
      <div class="hidden md:flex items-center space-x-8">
        <% nav_links.each do |link| %>
          <%= link_to link[:name], link[:path], 
              class: "text-dark-500 dark:text-gray-300 hover:text-primary-500 dark:hover:text-primary-400 px-1 text-sm font-medium transition-colors #{current_page?(link[:path]) ? 'text-primary-600 dark:text-primary-400 font-semibold' : ''}" %>
        <% end %>
      </div>

      <!-- Mobile menu button - FIXED -->
      <button 
        class="md:hidden flex inset-0 h-screen  items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none z-50"
        data-action="click->navbar#toggle"
        data-navbar-target="toggleButton"
      >
        <span class="sr-only">Open menu</span>
        <div class="w-6 flex flex-col gap-1.5">
          <span class="h-0.5 w-6 bg-current transition-all duration-300" data-navbar-target="bar1"></span>
          <span class="h-0.5 w-6 bg-current transition-all duration-300" data-navbar-target="bar2"></span>
          <span class="h-0.5 w-6 bg-current transition-all duration-300" data-navbar-target="bar3"></span>
        </div>
      </button>
    </div>
  </div>

  <!-- Mobile menu - FIXED -->
  <div 
    class="md:hidden fixed inset-0 h-screen overflow-y-auto bg-white/95 dark:bg-dark-600/95 backdrop-blur-lg z-40 flex flex-col items-center justify-center transition-all duration-300 ease-in-out transform translate-x-full"
    data-navbar-target="mobileMenu"
  >
    <div class="flex flex-col items-center space-y-8">
      <% nav_links.each do |link| %>
        <%= link_to link[:name], link[:path], 
            class: "text-2xl font-medium #{current_page?(link[:path]) ? 'text-primary-600 dark:text-primary-400' : 'text-dark-600 dark:text-gray-300 hover:text-primary-500'}" %>
      <% end %>
     
    </div>

     <% if current_user %>
        
          <%= link_to "Admin", admin_dashboard_path, class: "navbar__link" %>
        
      <% end %>
  </div>
</nav>