<nav class="navbar" data-controller="navbar">
    <div class="navbar__container">
        <%= link_to 'Company', root_path, class: 'navbar__brand' %>
        <button class="navbar__mobile-toggle">
            <span class="navbar__toggle-icon"></span>
        </button>
    </div>

    <ul class="navbar__menu" data-navbar-target='menu'>
        <% nav_links.each do |link| %>
            <li class="navbar__item <%= active_class(link[:path]) %>">
                <%= link_to link[:name], link[:path], class: "navbar__link" %>
            </li>
        <% end %>
    </ul>
</nav>